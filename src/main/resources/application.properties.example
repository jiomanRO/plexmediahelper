spring.application.name=plexmediahelper

server.port=${SERVER_PORT}

#all \ must be escaped 3 times and value not between ""
#transmission.dir.name=\\\\\\\\nas326\\\\transmission\\\\
movies.extensions=.mkv,.mp4
filenames.exceptions=.*[Uu]demy.*,.*[Ss]killshare.*,.*[Ss]ubs[Pp]lease.*,.*[Cc]ertified.*

ssh.host=${SSH_HOST}
ssh.port=${SSH_PORT}
ssh.username=${SSH_USERNAME}
ssh.password=${SSH_PASSWORD}
nas.media.dir.name=${NAS_MEDIA_DIR_NAME}
nas.tvshows_link.dir.name=/volume1/tvshows_links/
nas.movies_link.dir.name=/volume1/movies_links/

# run scheduled task auto every day at ten o'clock
app.scheduling.cron=0 0 10 * * *

#HKEY_CURRENT_USER\SOFTWARE\Plex, Inc.\Plex Media Server\PlexOnlineToken
plex.server.token=${PLEX_SERVER_TOKEN}
plex.get_all_tokens.url=https://plex.tv/api/v2/server/access_tokens?auth_token=[plex_server_token]
plex.localserver.ip=${PLEX_LOCALSERVER}
plex.localserver.api.port=${PLEX_LOCALSERVER_PORT}
plex.localserver.api.refresh_all_libraries.url=http://[plex_local_server_ip]:[plex_local_server_api_port]/library/sections/all/refresh?X-Plex-Token=[plex_token]